<div class="container">
  <div class="row">
  <!-- TO DO : set default image if none set -->
    <img src="<%= @project.cover_img_url %>" class="img-responsive" alt="<%= @project.project_name %>">
  </div>

  <div class="row text-center">
  <h2 class="bg-info">Featured Projects</h2>
  </div>

  <hr>

  <div class="row">
  <div class="col-md-6"> <!-- Team members -->
      <div class="panel panel-primary">
          <div class="panel-heading">
            <h3><%= @project.project_name %></h3>
          </div>
          <div class="panel-footer">
          <p><%= @project.project_description %></p>
          </div>
      </div>
    </div>
    <div class="col-md-6"> <!-- Team members -->
      <div class="panel panel-primary">
          <div class="panel-heading">
            <h3>Team members</h3>
          </div>
          <div class="panel-footer">
          <% @members.each do |member| %>
              <a href="/users/<%= member.username %>"><span class="text-left"><%= member.username %></span></a><br><br>
          <% end %>
          </div>
      </div>
    </div>
  </div>


  <div class="row">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3>Audience</h3>
      </div>
      <div class="panel-footer">
        <dl class="dl-horizontal">
        <dt>Target Audience:</dt>
        <dd><%= @project.target_audience %></dd>
        <dt>Desired Sponsorship:</dt>
        <dd><%= @project.sponsorship_format %></dd>
      </dl>
      </div>
    </div>
  </div>

  <hr>

</div>
