<div class="container">

  <div id="map-canvas"> <!-- Google Maps API -->
  </div>

  <h1>Here goes the view of all projects</h1>
  <div class="row">

  <% @projects.each do |project| %>
  <a href="/projects/<%= project.id %>">
    <div class="col-lg-4 col-md-4">
      <div class="panel panel-primary">
        <div class="panel-heading">
            <img src="<%= project.cover_img_url %>" class="img-responsive thumbnail img-rounded" alt="<%= project.project_name %>">
        </div>

        <div class="panel-footer">
            <span class="pull-left"><%= project.project_name %></span>
            <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
            <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </a>
  <% end %>
  </div>
</div>
