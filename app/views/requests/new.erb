<div class="container">
<h1>Make it happen - Request Sponsorship!</h1>
<h4>Browse through our brands and make your request</h4>

<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Brand</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
  <% @brands_requests.each do |brand| %>
    <tr>
      <td><a href="/brands/<%= brand[:id] %>"><%= brand[:name] %></a></td>
      <% if brand[:requests] != nil %>
        <% if brand[:requests][:status] == 0 %>
          <td class="text-warning bg-warning">Open Request</td>
          <td><%= brand[:requests][:special_note] %></td>
        <% else %>
          <td class="text-success bg-success">Existing Sponsor</td>
          <td><%= brand[:requests][:special_note] %></td>
        <% end %>
      <% else %>
          <td class="text-primary bg-info">Has no request</td>
          <td>john@example.com</td>
      <% end %>
    </tr>
   <% end %>
  </tbody>
</table>
</div>
